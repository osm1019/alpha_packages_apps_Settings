<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center_vertical"
        android:background="@drawable/dot_top_menu_about_background"
        android:clipToPadding="false"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:layout_marginEnd="0dp">

            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_settings_about_device_filled"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="@dimen/homepage_preference_text_padding_start"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/about_settings"/>

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_title"
                android:layout_alignStart="@id/about_title"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSurfaceVariant"
                android:text="@string/summary_placeholder"
                android:singleLine="true"
                style="@style/PreferenceSummaryTextStyle"/>
        </RelativeLayout>

        <include layout="@layout/layout_chevron"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alpha_settings"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center_vertical"
        android:background="@drawable/dot_top_menu_alpha_background"
        android:clipToPadding="false"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:layout_marginEnd="0dp">

            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_settings_alpha"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="@dimen/homepage_preference_text_padding_start"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/alpha_settings_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_title"
                android:layout_alignStart="@id/settings_title"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSurfaceVariant"
                android:text="@string/alpha_settings_summary"
                android:singleLine="true"
                style="@style/PreferenceSummaryTextStyle"/>
        </RelativeLayout>

        <include layout="@layout/layout_chevron"/>
    </LinearLayout>
</LinearLayout>
