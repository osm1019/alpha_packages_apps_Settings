<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nad_top_menu_preference_layout"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="72dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/nad_top_menu_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nad_preference_height"
        android:layout_marginBottom="1dp"
        android:weightSum="5">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/account_avatar"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/search_bar_account_avatar_content_description"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/alpha_settings"
            android:background="@drawable/nad_top_menu_settings_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8">
            <TextView
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="?androidprv:attr/materialColorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alpha_settings_title"
                android:singleLine="true"
                android:textAlignment="center"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSurfaceVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/alpha_settings_summary"
                android:singleLine="true"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/search_bar"
            android:background="@drawable/nad_top_menu_search_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1">
            <Toolbar
                android:id="@+id/search_action_bar"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nextFocusForward="@+id/wifi"
                android:paddingEnd="@dimen/search_bar_padding_end"
                android:touchscreenBlocksFocus="false"
                android:navigationIcon="@drawable/settings_search"
                android:contentInsetStartWithNavigation="@dimen/search_bar_content_inset"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:padding="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/wifi"
            android:background="@drawable/nad_top_menu_wifi_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="1dp">
            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/wifi_icon"
                android:background="@android:color/transparent"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_top_menu_wifi"
                android:scaleType="centerInside"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSecondaryFixed"
                android:id="@+id/wifi_title"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/network_dashboard_title"
                android:maxLines="2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                style="@style/PreferenceSummaryTextStyle"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/battery"
            android:background="@drawable/nad_top_menu_battery_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="1dp">
            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/battery_icon"
                android:background="@android:color/transparent"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_top_menu_battery"
                android:scaleType="centerInside"
                android:rotation="90"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSecondaryFixed"
                android:id="@+id/battery_title"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/network_dashboard_title"
                android:maxLines="2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                style="@style/PreferenceSummaryTextStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
