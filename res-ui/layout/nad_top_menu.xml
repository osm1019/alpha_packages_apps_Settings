<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nad_rop_menu"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="72dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/nad_top_menu_top_bg"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="0dp"
        android:weightSum="5">
        <FrameLayout
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/account_avatar"
                android:padding="2dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/search_bar_account_avatar_content_description"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/alpha_settings"
            android:background="@drawable/nad_top_menu_settings_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingVertical="4dp">
            <TextView
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="?androidprv:attr/materialColorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alpha_settings_title"
                android:singleLine="true"
                android:textAlignment="center"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSurfaceVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/alpha_settings_summary"
                android:singleLine="true"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/search_bar"
            android:background="@drawable/nad_top_menu_search_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">
            <Toolbar
                android:id="@+id/search_action_bar"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nextFocusForward="@+id/wifi"
                android:paddingEnd="@dimen/search_bar_padding_end"
                android:touchscreenBlocksFocus="false"
                android:navigationIcon="@drawable/ic_settings_search"
                android:contentInsetStartWithNavigation="@dimen/search_bar_content_inset"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/wifi"
            android:background="@drawable/nad_top_menu_wifi_bg"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.preference.internal.PreferenceImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/wifi_icon"
                    android:background="@android:color/transparent"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_top_menu_wifi"
                    android:scaleType="centerInside"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?androidprv:attr/materialColorOnSecondaryFixed"
                    android:ellipsize="marquee"
                    android:id="@+id/wifi_title"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:text="@string/network_dashboard_title"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/wifi_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="4dp"
                    style="@style/PreferenceSummaryTextStyle"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/battery"
            android:background="@drawable/nad_top_menu_battery_bg"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp">
            <RelativeLayout
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.preference.internal.PreferenceImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/battery_icon"
                    android:background="@android:color/transparent"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_top_menu_battery"
                    android:scaleType="centerInside"
                    android:rotation="90"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?androidprv:attr/materialColorOnSecondaryFixed"
                    android:ellipsize="marquee"
                    android:id="@+id/battery_title"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="@string/network_dashboard_title"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/battery_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="4dp"
                    style="@style/PreferenceSummaryTextStyle"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
