<?xml version="1.0" encoding="utf-8" ?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/alpha_color_ripple">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <item id="@android:id/background">
        <shape
            android:tint="@color/alpha_color_secondary_accent_a30"
            android:tintMode="src_atop">
            <solid color="@color/alpha_color_secondary_accent_dark" />
            <corners android:radius="32dp" />
            <stroke
                android:width="2dp"
                android:color="#1affffff" />
        </shape>
    </item>
    <item
        android:width="32dp"
        android:height="40dp"
        android:drawable="@drawable/ic_settings_search"
        android:gravity="center"
        android:left="2dp"
        android:bottom="2dp"
        android:right="2dp"
        android:top="2dp" />
</ripple>
